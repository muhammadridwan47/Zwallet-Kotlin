<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:background="#F9FBFE"
    tools:context=".ui.transaction.inputsaldo.InputSaldoFragment">


    <include
        android:id="@+id/includeItem"
        layout="@layout/list_item_vertical_noprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/ivResultSaldo"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        style="@style/TextView.NunitoSansBold16"
        android:textColor="#7C7895"
        android:text="Rp120.000 Available"/>


    <EditText
        android:id="@+id/ivInpuSaldo"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#B5BDCC"
        android:hint="0.00"
        android:inputType="number"
        android:maxLength="9"
        android:fontFamily="@font/nunito_sans_bold"
        android:background="@android:color/transparent"
        android:textSize="42sp"/>

    <EditText
        android:id="@+id/ivNoteTransaction"
        android:layout_marginTop="50dp"
        style="@style/EditText.Input"
        android:drawableLeft="@drawable/ic_pencil"
        android:inputType="textPersonName"
        android:hint="Add some notes"
        android:textColor="#C9CACB"
        android:background="@drawable/border_bottom_input_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <Button
            android:id="@+id/ivBtnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_radius"
            android:paddingVertical="16dp"
            android:layout_marginTop="10dp"
            android:text="Continue"
            android:textColor="#88888F"
            android:textAllCaps="false"
            style="@style/TextView.NunitoSansBold18"
            android:layout_marginBottom="25dp"
            />
    </LinearLayout>
</LinearLayout>